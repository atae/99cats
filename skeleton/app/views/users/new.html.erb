<h1> Create an Account</h1>
<% if flash[:errors]%>
<ul>
  <% flash[:errors].each do |error| %>
  <li> <%= error %> </li>

</ul>
  <% end %>
<% end %>
<br>
<form  action="http://localhost:3000/users" method="post">
  <input type="hidden" name="authenticity_token" value= "<%= form_authenticity_token %>"
  <label for="username"> Username</label>
  <input type="text" name="user[user_name]" value="" id = "username">

  <label for="password">Password</label>
  <input type="text" name="user[password]" value="" id = "password">
  <br>
  <br>
  <button style="width:100px;height:30px;">Create Account</button>
</form>
